- content_for :title, t('.title')

.block.brd
  = block_title t('.title'), 'user_teacher.png'
  .block-content
    - unless @lecturers.empty?
      %ul
        - @lecturers.each do |lecturer|
          %li= link_to lecturer.full_name, profile_path(lecturer.user.login)
    - else
      %p= t('.empty')
  .block-buttons
    = link_to "‚Üê #{t('.back_to_department')}", department_path(params[:id])