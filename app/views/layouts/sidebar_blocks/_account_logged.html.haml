%div{style: "margin-bottom: 10px"}
  = t('.logged_as')
  %b= logged_user.login
%hr.compact.dashed/
%ul
  %li
    = image_tag "user.png"
    = link_to t('.profile'), :profile
  %li
    = image_tag "settings.png"
    = link_to t('.settings'), :settings
  %li
    = image_tag "mail_icon.png"
    = link_to t('.messages'), :inbox
    - if logged_user.unread_messages > 0
      %span.unread-count= "[#{logged_user.unread_messages}]"
  %li
    = image_tag "logout.png"
    = link_to t('.logout'), :logout