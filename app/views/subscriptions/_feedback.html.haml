.feedback
  .feedback-title
    .left
      = t(".feedback_from")
      %span.strong= feedback.student.user.login
    .right
      = feedback.time.strftime('%e.%m.%Y, %H:%M')
      - if logged? && logged_user.student? && feedback.student_id == logged_user.student.id
        = link_to feedback_destroy_path(feedback.id), method: :delete do
          = image_tag "cross.png", class: "remove-feedback"
    .cf
  .feedback-content
    %table
      %tr
        %th.wp-95= t(".question")
        %th= t(".rating")
      - feedback.feedback_answers.each do |a|
        - if a.question.present?
          %tr
            %td= a.question.text
            - cls = "rating-#{a.answer}"
            %td.t-center.answer-rating{class: cls}= "#{a.answer} / 5"